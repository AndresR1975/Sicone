<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario del Wizard -->
        <record id="import_excel_wizard_form" model="ir.ui.view">
            <field name="name">Importar Cotización Excel - Formulario</field>
            <field name="model">sicone.import.excel.wizard</field>
            <field name="arch" type="xml">
                <form string="Importar Cotización de Excel">
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="filename"/>
                            <field name="excel_file" filename="filename" widget="binary"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_import_excel" type="object" string="Importar" class="btn-primary"/>
                        <button string="Cancelar" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el Wizard -->
        <record id="import_excel_wizard_action" model="ir.actions.act_window">
            <field name="name">Importar Cotización Excel</field>
            <field name="res_model">sicone.import.excel.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Botón en Sale Order para abrir el Wizard -->
        <record id="view_order_form_with_import" model="ir.ui.view">
            <field name="name">Cotización - con Importar Excel</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="%(import_excel_wizard_action)d" type="action" string="Importar de Excel" 
                            class="oe_highlight" icon="fa-upload"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
