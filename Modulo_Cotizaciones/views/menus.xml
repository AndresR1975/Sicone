<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menú principal SICONE -->
    <menuitem id="menu_sicone_root" name="SICONE" sequence="1"/>

    <!-- Menú de Proyectos -->
    <menuitem id="menu_sicone_proyectos" name="Proyectos" parent="menu_sicone_root" sequence="10"/>

    <!-- Acción de proyectos -->
    <record id="action_sicone_proyecto" model="ir.actions.act_window">
        <field name="name">Proyectos</field>
        <field name="res_model">sicone.proyecto</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Gestione los proyectos de construcción registrados en SICONE.</p>
        </field>
    </record>

    <menuitem id="menu_sicone_proyecto_list" name="Lista de Proyectos" parent="menu_sicone_proyectos" action="action_sicone_proyecto" sequence="1"/>
        <!-- Acción de Cotizaciones (sale.order) -->
        <record id="action_sicone_sale_order" model="ir.actions.act_window">
            <field name="name">Cotizaciones</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Menú Cotizaciones bajo Proyectos -->
        <menuitem id="menu_sicone_sale_order" name="Cotizaciones" parent="menu_sicone_proyectos" action="action_sicone_sale_order" sequence="2"/>
</odoo>
