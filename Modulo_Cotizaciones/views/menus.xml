<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de proyectos SICONE restaurada -->
    <record id="action_sicone_project" model="ir.actions.act_window">
        <field name="name">Proyectos SICONE</field>
        <field name="res_model">sicone.proyecto</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Gestione los proyectos de construcción registrados en SICONE.</p>
        </field>
    </record>

    <menuitem id="menu_sicone_proyecto_list" name="Lista de Proyectos SICONE" parent="menu_sicone_proyectos" action="action_sicone_project" sequence="2"/>

    <!-- Acción y menú para proyectos Odoo estándar (project.project) -->
    <record id="action_project_project_list" model="ir.actions.act_window">
        <field name="name">Lista de Proyectos Odoo</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Visualice y gestione los proyectos estándar de Odoo personalizados para SICONE.</p>
        </field>
    </record>
    <menuitem id="menu_project_project_list" name="Lista de Proyectos Odoo" parent="menu_sicone_proyectos" action="action_project_project_list" sequence="3"/>
    <!-- Menú principal SICONE -->
    <menuitem id="menu_sicone_root" name="SICONE" sequence="1"/>

    <!-- Menú de Proyectos -->
    <menuitem id="menu_sicone_proyectos" name="Proyectos" parent="menu_sicone_root" sequence="10"/>

    <!-- Menú de proyectos usa el modelo estándar project.project -->
    <menuitem id="menu_sicone_project_list" name="Lista de Proyectos" parent="menu_sicone_proyectos" action="project.open_view_project_all" sequence="1"/>
        <!-- Acción de Cotizaciones (sale.order) -->
        <record id="action_sicone_sale_order" model="ir.actions.act_window">
            <field name="name">Cotizaciones</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Menú Cotizaciones bajo Proyectos -->
        <menuitem id="menu_sicone_sale_order" name="Cotizaciones" parent="menu_sicone_proyectos" action="action_sicone_sale_order" sequence="2"/>


    <!-- Menú de Configuración al mismo nivel que Proyectos -->
    <menuitem id="menu_sicone_configuracion" name="Configuración" parent="menu_sicone_root" sequence="20"/>
    <menuitem id="menu_cotizacion_template" name="Plantillas de Cotización" parent="menu_sicone_configuracion" action="action_cotizacion_template" sequence="10"/>

</odoo>
